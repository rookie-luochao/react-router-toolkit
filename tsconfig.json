{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "es", "dist", "**/__tests__", "**/__test__", "**/demo"]
}